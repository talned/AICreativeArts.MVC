<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Creative AI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-dark text-white">
    <nav class="navbar navbar-expand-lg bg-black d-flex justify-content-between align-items-center px-3">
        <div class="d-flex align-items-center">
            <a class="navbar-brand text-white fw-bold" asp-controller="Home" asp-action="Index">Creative AI</a>
            <div class="navbar-nav ms-3">
                <a class="nav-link text-white px-4 text-decoration-none btn btn-outline-dark border-0 fw-medium fs-6" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link text-white px-4 text-decoration-none btn btn-outline-dark border-0 fw-medium fs-6" asp-controller="Home" asp-action="Contact">Contact</a>
            </div>
        </div>
        <div class="navbar-nav ms-3">
            @if (User.Identity?.IsAuthenticated == true) {
                <span class="nav-link text-white p-2">Hello, @(User.Identity?.Name ?? "User") - Role: @(User.IsInRole("Admin") ? "Admin" : "Member")</span>
                <a class="nav-link text-white px-4 text-decoration-none btn btn-outline-dark border-0 fw-semibold fs-6" asp-controller="Account" asp-action="Logout">Logout</a>
            } 
            else 
            {
                <a class="nav-link text-white px-4 text-decoration-none btn btn-outline-dark border-0 fw-semibold fs-6" asp-controller="Account" asp-action="Login">Login</a>
                <a class="nav-link text-white px-4 text-decoration-none btn btn-outline-dark border-0 fw-semibold fs-6" asp-controller="Account" asp-action="Register">Register</a>
            }
        </div>
    </nav>
    <main class="container mx-0 px-0"> 
        @RenderBody()
    </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/_layout-script.js"></script>
</body>
</html>
